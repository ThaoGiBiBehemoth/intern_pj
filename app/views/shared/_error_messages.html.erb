<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.count, "error") %>.  <%# đơn giản pluralize là tạo số nhiều cho từ, cụ thể đây là 1 error, 2 errors %>
    </div>
    <ul>
      <% @user.errors.full_messages.each do |r| %>
        <li><%= r %></li>
      <% end %>
    </ul>
  </div>
<% end %>