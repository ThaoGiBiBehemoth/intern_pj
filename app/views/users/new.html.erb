<%provide(:title, "Signup")%>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |k| %>    
      <%= k.label :name %>
      <%= k.text_field :name %>
      
      <%= k.label :email %>
      <%= k.email_field :email %>
      
      <%= k.label :password %>
      <%= k.password_field :password %>
      
      <%= k.label :password_confirmation, "Confirmation" %>
      <%= k.password_field :password_confirmation %>
      
      <%= k.submit "Create account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>